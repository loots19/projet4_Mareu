<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="1dp"
    >


    <ImageView
        android:id="@+id/item_avatar"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_roomName"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:textColor="#0C0B0B"
        android:textSize="@dimen/text_size_item"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toEndOf="@+id/item_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_subject"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:textColor="#0F0F0F"
        android:textSize="@dimen/text_size_item"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_mail"
        app:layout_constraintEnd_toStartOf="@+id/item_time"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toEndOf="@+id/item_roomName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:textColor="#0F0F0F"
        android:textSize="@dimen/text_size_item"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toEndOf="@+id/item_roomName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:textColor="#0F0F0F"
        android:textSize="@dimen/text_size_item"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/item_mail"
        app:layout_constraintStart_toEndOf="@+id/item_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_mail"
        android:layout_width="280dp"
        android:layout_height="match_parent"
    